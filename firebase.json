{
  "hosting": {
    "public": "build",
     "headers": [
      { "source":"/service-worker.js", "headers": [{"key": "Cache-Control", "value": "no-cache"}] }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/r/*",
        "function": "relay"
      },
      {
        "source": "/r2",
        "function": "relay2"
      }
    ],
  
    "firestore": {
      "rules": "firestore.rules",
      "indexes": "firestore.indexes.json"
    },
    "emulators": {
      "firestore": {
        "port": "5002"
      }
    }
  }
}