{
  "hosting": {
    "public": "build",
     "headers": [
      { "source":"/service-worker.js", "headers": [{"key": "Cache-Control", "value": "no-cache"}] }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [ {
      "source": "/r/:id*",  // captures the entire URL segment beginning at "post"
      "destination": "https://asia-northeast1-portfolio-showcase-website.cloudfunctions.net/relay/:id", // includes the entire URL segment identified and captured by the "source" value
      "type": 301
    }],
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html"
      }
    ],
  
    "firestore": {
      "rules": "firestore.rules",
      "indexes": "firestore.indexes.json"
    },
    "emulators": {
      "firestore": {
        "port": "5002"
      }
    }
  }
}